/* nav */
.nav_wrap {

  height: 80rpx;
  width: 100%;
  border-bottom: 1rpx solid #E5E5E5;
  background-color: #fff;
  overflow: scroll;
  white-space:nowrap;
  
}

.nav_item {display: inline-block;float:left;font-size: 28rpx; white-space:nowrap;width: 150rpx;}
.nav_item .nav_item_s {height: 80rpx; margin: 0 25rpx; line-height: 80rpx; color: #B7B7B7;}
.nav_item .nav_item_s.selected {border-bottom: 4rpx solid #666; color: #666;}


