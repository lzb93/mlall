/* pages/USER/user/user.wxss */
page {
  background-color: #EFEFF4;
}
.tc{
  text-align: center;
}
.user {
  position: relative;
  height: 220rpx;
}
.user_bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 220rpx;
  background: #628DA3;
  z-index: -1;
}
.user_head {
  z-index: 9;
  position: relative;
  padding: 45rpx 25rpx 0;
}
.user_avatar {
  overflow: hidden;
  position: relative;
  width: 98rpx;
  height: 98rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.user_avatar_border {
  z-index: 10;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
}
.user_avatar_img {
  display: block;
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}
.user_name {
  font-size: 32rpx;
  color: #fff;
}
.user_point {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #fff;
}
.user_add {
  font-size: 24rpx;
  color: #fff;
  height: 50rpx;
  line-height: 50rpx;
  background: #2C5B73;
  width: 175rpx;
  border-radius:25rpx 0 0 25rpx ; 
  position: absolute;
  right: 0;
  padding-left: 10rpx;
}
.user_add image{
  width: 22rpx;
  margin:0 10rpx;


}
.user_login {
  height: 60rpx;
  line-height: 56rpx;
  margin-top: 22rpx;
  border: 1rpx solid #fff !important;
  font-size: 28rpx;
  color: #fff !important;
}

.user_jifen {
  overflow: hidden;
  width: 95%;
  height: 120rpx;
  margin: 20rpx auto 0;
  border-radius: 20rpx;
}
.user_jifen image {
  overflow: hidden;
  display: block;
  width: 100%;
  height: 120rpx;
  border-radius: 20rpx;
}

.user_order {
  overflow: hidden;
  width: 95%;
  margin: 20rpx auto 0;
  border-radius: 20rpx;
  background-color: #fff;
}
.user_order_wrap {
  padding: 15rpx 25rpx;
  background-color: #fff;
}
.user_order_t {
  font-size: 30rpx;
}
.user_order_b {
  font-size: 24rpx;
  color: #ADADAD;
}
.icon_all {
  display: block;
  width: 13rpx;
  height: 23rpx;
  margin: 7rpx 0 0 14rpx;
}
.order_item_wrap {
  padding: 20rpx 40rpx 15rpx;
  border-top: 1rpx solid #F5F5F5;
  background-color: #fff;
}
.order_item image {
  display: block;
  width: 44rpx;
  height: 44rpx;
  margin: 0 auto;
}
.order_item > view {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.user_list {
  overflow: hidden;
  width: 95%;
  margin: 20rpx auto;
  /* padding: 10rpx 0; */
  border-radius: 20rpx;
  background-color: #fff;
}
.icon_list_right {
  display: block;
  width: 15rpx;
  height: 25rpx;
  margin-top: 10rpx;
}
.list_item {
  /* display: inline-block;
  width: 33.3%;
  height: 150rpx; */
  padding: 20rpx 26rpx;
  border-bottom: 1rpx solid #f5f5f5;
  border-right: 1rpx solid #f5f5f5;
  position: relative;
}
.list_item:nth-child(3n) {
    border-right: 0rpx solid #f5f5f5;
}
.refund {
  margin-right:15rpx;
  margin-top:5rpx;
  width: 36rpx;
  height: 36rpx;
  /* margin-right: 20rpx; */
}
.item_text {
  font-size: 26rpx;
}
.list_item button{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0

 }