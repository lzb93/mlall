page {background-color: #EFEFF4; padding-top: 100rpx; } 
/* 搜索 */
.search_container {
  z-index: 9;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 0;
  background-color: #EFEFF4;
}
.search {
  overflow: hidden;
  width: 90%;
  height: 62rpx;
  line-height: 60rpx;
  border: 1rpx solid #DBDBDB;
  margin: 0 auto;
  border-radius: 50rpx;
  background: #fff;
}
.search_left {
  width: 72%;
}
.search_icon {
  width: 9%;
  height: 34rpx;
  margin: 12rpx 0 0 20rpx;
}
.search_icon image {
  display: block;
  width: 100%;
  height: 100%;
}
.search_input {
  width: 90%;
  padding: 0 15rpx;
}
.search_input input {
  display: block;
  width: 100%;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 26rpx;
}
.search_btn {
  width: 20%;
  text-align: center;
  font-size: 26rpx;
}
.icon_empt {
  width: 34rpx;
  height: 34rpx;
  margin-top: 12rpx;
}
.icon_empt image {
  display: block;
  width: 100%;
  height: 100%;
}
/* banner图 */
.swiper {
  width: 100%;
  height: 400rpx;
}
.swiper image {
  display: block;
  width: 100%;
  height: 400rpx;
  background-color: #fff;
}

/* 公用 */
.layout{
  padding-bottom: 50rpx;
}
.layout_header {
  padding: 20rpx;
}
.layout_title {
  font-size: 28rpx;
  border-left: 12rpx solid #F76A06;
  padding-left: 15rpx;
}
.layout_more {
  font-size: 24rpx;
}

.title image{
  width: 220rpx;
  margin:30rpx auto;
}

/* nav块 */
.nav_item {
  width: 150rpx;
  margin:20rpx 0;
}
.nav_item image {
  display: block;
  width: 78rpx;
  height: 78rpx;
  margin: 0 auto 14rpx;
  border-radius: 10rpx;
}
.nav_item .item_text {
  font-size: 22rpx;
  text-align: center;
}

/* 活动 */
.activity_item {
  display: inline-block;
  width: 350rpx;
  margin-left: 30rpx;
  background-color: #fff;
}
.activity_item:last-child {
  margin-right: 30rpx;
}
.item_content {
  padding: 0 10rpx;
  text-align: center;
}
.activity_item .text {
  margin-top: 20rpx;
  font-size: 24rpx;
  white-space: normal !important;
}
.activity_item .img {
  display: block;
  width: 100%;
  height: 170rpx;
  background-color: #fefefe;
}

/* 促销 */
.cuxiao_item {
  display: inline-block;
  width: 210rpx;
  margin-left: 30rpx;
}
.cuxiao_item:last-child {
  margin-right: 30rpx;
}
.cuxiao_item .img {
  display: block;
  width: 100%;
  height: 210rpx;
  background-color: #fefefe;
}
.cuxiao_item .item_content {
  width: 210rpx;
  padding: 15rpx 0;
}
.cuxiao_item .text {
  font-size: 24rpx;
}
.cuxiao_item .item_money {
  margin-top: 14rpx;
}
/* 推荐 */
.product_item {
  width: 370rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
}
.product_item image {
  display: block;
  width: 100%;
  height: 319rpx;
  background-color: #fefefe;
}
.product_content {
  padding: 15rpx;
}
.item_title {
  font-size: 24rpx;
}
.item_money {
  font-size: 30rpx;
}
.item_buy {
  font-size: 20rpx;
}
.product_item .item_text {
  font-size: 24rpx;
}



