/* pages/HOME/fenxiao/fenxiao.wxss */
.fenxiao{

}
.fenxiao-head{
  width:750rpx;
  height:300rpx;
  background:#112061;
  padding-top: 100rpx;

  display: flex

}
.fenxiao-head view{
  color: #fff;
}
.head-text{
  width: 250rpx;
  height: 150rpx;
  color: #fff;
  flex: 5;
  text-align: center
}
.tixian{
    flex:2;

    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border: 1px solid #fff;
    margin: 10rpx 20rpx;
}
.fenxiao-nav{
    display: flex


}
.fxnav-li{
    flex:2;
    border-bottom: 2px solid #fff;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    background: #fff;

}
.fxnav-li.on{
  border-bottom: 2px solid #112061;
  color: #112061;
}
.fenxiao-main{

}
.fxmain-li{
  width: 700rpx;
  height: 300rpx;
  margin:15rpx auto 0;
  background: #fff;
  border-radius:10px;
  padding: 15rpx;
}
.fxli-left{
  width: 200rpx;
  float: left;


}
.fxli-left image{
  width: 200rpx;
  height: 200rpx;
  background: #112061;
  border-radius:10px;

}
.fxli-right{
  width:430rpx;
  height:200rpx;
    float: right;
  border-radius:26px;
  font-size: 28rpx;
  position: relative;

}
.fxli-h4{
  font-size: 32rpx;
  line-height: 70rpx;
}
.fxli-p{
  color: #112061;
}
.fxli-sm{
  color: #112061;
  font-size: 24rpx;
}
.fxli-span{
  color: #AEAEAE;
  font-size: 24rpx;
}
.fxli-btn{
   position: absolute;
   right: 0;
   top: 110rpx; 
   color: #112061;
   border: 1px solid #112061;
   border-radius:15px; 
   padding: 10rpx;
}
.dingdan{
  font-size: 26rpx;
  margin:10rpx 8rpx; 

}
/* alert */

.cj-alert{
  position: fixed;
  width: 680rpx;
  height: 680rpx;
  background: #fff;
  border:1px solid #ffdfee;
  border-radius: 8px;
  top: 100rpx;
  left: 35rpx; 
  z-index: 9999;
}
.cj-li{
  width: 640rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding:0 15rpx;
  margin: 20rpx;
  border-bottom: 1px solid #ffdfee;
}
.cj-li text{
  text-align: right;
  float: right;
  color: green;
}
.cJguanbi,.cJguantrue{
  width: 90%;
  margin: 20rpx 5%;
  background: #ccc;
  text-align: center;
  line-height: 80rpx;
  position: absolute;
  bottom: 0;
  left: 0;

}
.cJguantrue{
  bottom:100rpx;
  background: red;
  color: #fff;
}
.cj-alert input{
  width: 90%;
  margin: 20rpx 5%;
  border: 1px solid #dcdcdc;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 15rpx;
}
