page {
  display: block;
  width: auto;
  background-color: #f5f5f5;
}

.add-button {
  /* width: 280rpx; */
  border-radius: 50rpx;
  border: none;
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(to right, #a1cee7, #4ba4df);
}

.add-card-btn {
  padding: 80rpx 40rpx 0 40rpx;
}

.item {
  /* display: flex; */
  background-color: #fff;
  padding: 0 20px;
  height: 150rpx;
  line-height: 150rpx;
  position: relative;
  border-bottom: 1px solid #f1f1f1;
  font-size: 32rpx;
}

.item-img {
  position: absolute;
  top: 50%;
  margin-top: -25px;
  right: 80rpx;
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.item-left {
  position: absolute;
  top: 50%;
  margin-top: -10px;
  right: 10rpx;
  width: 20px;
  height: 20px;
}

.item-right {
  float: right;
  margin-right: 30rpx;
  color: #4ba4df;
}

.item-border {
  border-top: 40rpx solid #f1f1f1;
}

.withdraw-num {
  display: inline-block;
  font-size: 36px;
  width: 100%;
  height: 96rpx;
  overflow: hidden;
}

.pl-class {
  height: 96rpx;
  font-size: 36px;
  font-weight: bold;
  color: #e5e5e5;
}

.withdraw-contant {
  background-color: #fff;
  padding: 40rpx 0 40rpx 40rpx;
  width:700rpx;
  margin:20rpx auto;

}

.item-flex {
  display: flex;
  border-bottom: 1px solid #f1f1f1;
  margin: 50rpx 0;
}

.money-iocn {
  width: 80rpx;
  font-weight: bold;
  font-size: 20px;
}

.monen {
  width: calc(100% - 100rpx);
  height: 120rpx;
}

.withdraw-tips {
  color: #bdbdbb;
  font-size: 32rpx;
}

.model-title {
  display: flex;
  padding: 50rpx 40rpx;
}

.model-input {
  width: calc(100% - 200rpx);
}

.model-btn {
  width: 200rpx;
}

.model-btn button {
  font-size: 24rpx;
  color: #a1cee7;
  border: 1px solid #a1cee7;
  border-radius: 50rpx;
  background-color: #fff;
}

.model-menu {
  display: flex;
  text-align: center;
}

.cancel-btn {
  font-size: 26rpx;
  flex: 1;
  padding: 15rpx 0;
  background-color: #f9f9f9;
  border-bottom-left-radius: 16px;
}

.confirm-btn {
  flex: 1;
  font-size: 26rpx;
  padding: 15rpx 0;
  border-bottom-right-radius: 16rpx;
  color: #fff;
  background: linear-gradient(to right, #a1cee7, #4ba4df);
}

