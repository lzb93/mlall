  font-size: 24rpx;
}
.fxli-btn{
   position: absolute;
   right: 0;
   top: 110rpx; 
   color: #628DA3;
   border: 1px solid #628DA3;
   border-radius:15px; 
   padding: 10rpx;
}
.dingdan{
  font-size: 26rpx;
  margin:10rpx 8rpx; 

}
/* alert */

.cj-alert{
  position: fixed;
  width: 680rpx;
  height: 680rpx;
  background: #fff;
  border:1px solid #ffdfee;
  border-radius: 8px;
  top: 100rpx;
  left: 35rpx; 
  z-index: 9999;
}
.cj-li{
  width: 640rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding:0 15rpx;
  margin: 20rpx;
  border-bottom: 1px solid #ffdfee;
}
.cj-li text{
  text-align: right;
  float: right;
  color: green;
}
.cJguanbi,.cJguantrue{
  width: 90%;
  margin: 20rpx 5%;
  background: #ccc;
  text-align: center;
  line-height: 80rpx;
  position: absolute;
  bottom: 0;
  left: 0;

}
.cJguantrue{
  bottom:100rpx;
  background: red;
  color: #fff;
}
.cj-alert input{
  width: 90%;
  margin: 20rpx 5%;
  border: 1px solid #dcdcdc;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 15rpx;
}



/* 方块 */
.user_list {
  overflow: hidden;
  width: 95%;
  margin: 20rpx auto 0;
  /* padding: 10rpx 0; */
  border-radius: 20rpx;
  background-color: #fff;
  text-align: center;
}
.icon_list_right {
  display: block;
  width: 15rpx;
  height: 25rpx;
  margin-top: 10rpx;
}
.list_item {
  display: inline-block;
  width: 33.333%;
  height: 150rpx;
  padding: 20rpx 26rpx;
  border-bottom: 1rpx solid #f5f5f5;
  border-right: 1rpx solid #f5f5f5;
  position: relative;
  float:left;

}
.list_item:nth-child(3n) {
    border-right: 0rpx solid #f5f5f5;
}

.refund {

  width: 50rpx;
  height: 50rpx;
  /* margin-right: 20rpx; */
}
.item_text {
  font-size: 26rpx;
}
.list_item button{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0

 }